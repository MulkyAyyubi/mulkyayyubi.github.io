<script>
const navShi = document.querySelectorAll("#navShi [data-project]");
const itemShi = document.querySelectorAll("#itemShi [data-project]");

navShi.forEach((singleNavShi) => {
    singleNavShi.addEventListener("click", () => {
        navShi.forEach((singleNavShi) => singleNavShi.classList.remove("outline", "rounded-xl", "outline-offset-8"))

        singleNavShi.classList.add("outline", "rounded-xl", "outline-offset-8")
        

        itemShi.forEach((singleItemShi) => singleItemShi.classList.add("hidden"));
        document.querySelectorAll(`#itemShi [data-project=${singleNavShi.dataset.project}]`).forEach((singleSelectedShi) => singleSelectedShi.classList.remove("hidden"));
    })
})

const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
        console.log(entry)
        if (entry.isIntersecting) {
            entry.target.classList.add('show');
        } else {
            entry.target.classList.remove('show')
        }
    });
});

const hiddenElements = document.querySelectorAll('.scroll, footer');
hiddenElements.forEach((el) => observer.observe(el));
</script>